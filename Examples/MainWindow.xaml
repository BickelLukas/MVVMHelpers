<Window x:Class="Examples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Examples"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" DataContext="{Binding Path=CommandsExampleViewModel, Source={StaticResource Locator}}">
            <TextBox Width="100" Margin="10" Text="{Binding Username}"  />
            <TextBox Width="100" Margin="10" Text="{Binding Password}"  />
            <Button Width="100" Margin="10" Command="{Binding LoginCommand}">Login</Button>
        </StackPanel>

    </Grid>
</Window>
